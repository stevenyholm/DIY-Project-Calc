@model IEnumerable<DiyProjectCalc.Models.DTO.ProjectDTO>
@{
    ViewData["Title"] = "Projects List";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Projects</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>&nbsp;&nbsp; Create New Project
            </a>
        </div>
    </div>
</div>
<br /><br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <td>Project Name</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="80%">@obj.Name</td>
                <td >
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@obj.ProjectId"
                class="btn btn-dark mx-2">
                            <i class="bi bi-clipboard-check"></i> Details</a>
                        <a asp-controller="Projects" asp-action="Edit" asp-route-id="@obj.ProjectId"
                class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Edit</a>
                        <a asp-controller="Projects" asp-action="Delete" asp-route-id="@obj.ProjectId"
                class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>