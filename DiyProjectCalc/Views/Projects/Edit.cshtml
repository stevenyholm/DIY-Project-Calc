@model Project

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Project</h2>
            <hr />
        </div>
        <div class="text-info">Enter 42 to get a server-side validation error.</div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="ProjectId" />
        <div class="mb-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="text-info">
            <a asp-controller="Materials" asp-action="Index" asp-route-ProjectId="@Model?.ProjectId" >Materials for this project</a>
            <br />
            <br />
            <a asp-controller="BasicShapes" asp-action="Index" asp-route-ProjectId="@Model?.ProjectId" >Shapes for this project</a>
            <br />
            <br />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
        <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Cancel
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
