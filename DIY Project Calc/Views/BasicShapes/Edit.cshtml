@model DIY_Project_Calc.Models.BasicShape

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BasicShape</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BasicShapeId" />
            <div class="form-group">
                <label asp-for="ShapeType" class="control-label"></label>
                <select asp-for="ShapeType" asp-items="Html.GetEnumSelectList<BasicShapeType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="ShapeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number1" class="control-label"></label>
                <input asp-for="Number1" class="form-control" />
                <span asp-validation-for="Number1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number2" class="control-label"></label>
                <input asp-for="Number2" class="form-control" />
                <span asp-validation-for="Number2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ProjectId" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-ProjectId="@Model?.ProjectId">Back to List</a>
</div>

